<script>
// Update current date and time
function updateDateTime() {
    const now = new Date();
    const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    };
    document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', options);
    document.getElementById('currentTime').textContent = now.toLocaleTimeString('en-US');
}

updateDateTime();
setInterval(updateDateTime, 1000);

// Load market overview
async function loadMarketOverview() {
    try {
        const response = await fetch('/api/stocks?limit=5&sortBy=volume&order=desc');
        const data = await response.json();
        
        if (data.stocks && data.stocks.length > 0) {
            const html = data.stocks.map(stock => {
                const change = stock.currentPrice - stock.previousClose;
                const changePercent = (change / stock.previousClose) * 100;
                const isPositive = change >= 0;
                
                return `
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border-bottom: 1px solid #f0f0f0; transition: background 0.2s; cursor: pointer;"
                         onclick="window.location.href='/stocks/stock/${stock.symbol}'"
                         onmouseover="this.style.background='#f8f9fa'" 
                         onmouseout="this.style.background='white'">
                        <div style="flex: 1;">
                            <div style="font-weight: 700; font-size: 1.1em; color: #2c3e50; margin-bottom: 3px;">${stock.symbol}</div>
                            <div style="font-size: 0.85em; color: #666;">${stock.name.substring(0, 30)}${stock.name.length > 30 ? '...' : ''}</div>
                        </div>
                        <div style="text-align: right;">
                            <div style="font-weight: 700; font-size: 1.2em; color: #2c3e50; margin-bottom: 3px;">${stock.currentPrice.toFixed(2)}</div>
                            <div style="font-size: 0.9em; font-weight: 600; color: ${isPositive ? '#4CAF50' : '#f44336'};">
                                ${isPositive ? '‚ñ≤' : '‚ñº'} ${Math.abs(change).toFixed(2)} (${isPositive ? '+' : ''}${changePercent.toFixed(2)}%)
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
            
            document.getElementById('marketOverview').innerHTML = html;
        } else {
            document.getElementById('marketOverview').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #666;">
                    <div style="font-size: 2em; margin-bottom: 10px;">üìä</div>
                    <div>No market data available</div>
                    <a href="/stocks/market" style="color: #2196F3; text-decoration: none; margin-top: 10px; display: inline-block;">
                        Browse Stock Market ‚Üí
                    </a>
                </div>
            `;
        }
    } catch (error) {
        console.error('Error loading market overview:', error);
        document.getElementById('marketOverview').innerHTML = `
            <div style="text-align: center; padding: 40px; color: #666;">
                <div style="font-size: 2em; margin-bottom: 10px;">‚ö†Ô∏è</div>
                <div>Failed to load market data</div>
                <button onclick="loadMarketOverview()" style="margin-top: 15px; padding: 8px 16px; background: #2196F3; color: white; border: none; border-radius: 6px; cursor: pointer;">
                    Retry
                </button>
            </div>
        `;
    }
}

// Load portfolio summaries
async function loadPortfolioSummaries() {
    const portfolioCards = document.querySelectorAll('.portfolio-card');
    let totalValue = 0;
    
    for (const card of portfolioCards) {
        const portfolioId = card.dataset.portfolioId;
        const statsContainer = document.querySelector(`.portfolio-stats-${portfolioId}`);
        
        try {
            // This would normally fetch from your API
            // For now, we'll show placeholder data
            statsContainer.innerHTML = `
                <div style="text-align: center;">
                    <div style="font-size: 0.85em; color: #666; margin-bottom: 5px;">Portfolio Value</div>
                    <div style="font-weight: 700; font-size: 1.3em; color: #4CAF50;">View Details</div>
                </div>
                <div style="text-align: center;">
                    <div style="font-size: 0.85em; color: #666; margin-bottom: 5px;">Holdings</div>
                    <div style="font-weight: 700; font-size: 1.3em; color: #2c3e50;">Click to View</div>
                </div>
            `;
        } catch (error) {
            console.error(`Error loading portfolio ${portfolioId}:`, error);
        }
    }
    
    // Update total value
    if (totalValue > 0) {
        document.getElementById('totalValue').textContent = `${totalValue.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    loadMarketOverview();
    loadPortfolioSummaries();
    
    // Refresh market data every 30 seconds
    setInterval(loadMarketOverview, 30000);
    
    // Add smooth scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
});
</script>

